  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "concurrently": "^9.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
